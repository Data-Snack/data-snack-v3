{
  "name": "tracking-server",
  "version": "0.0.0",
  "private": true,
  "description": "GTM Server-Side tracking service for Data Snack",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t data-snack-tracking .",
    "docker:run": "docker run -p 8080:8080 data-snack-tracking"
  },
  "dependencies": {
    "@data-snack/core": "workspace:*",
    "@data-snack/database": "workspace:*",
    "@data-snack/tracking": "workspace:*",
    "fastify": "^4.25.2",
    "@fastify/cors": "^8.4.2",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
